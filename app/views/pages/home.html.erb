<!-- Carousel -->
<div id="carousel-example-generic" class="carousel slide jumbotron" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <!-- <li data-target="#carousel-example-generic" data-slide-to="3"></li> -->
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    

    <div class="item active">
      <div class="background">
		  	<%= image_tag 'cover_photo_lg.jpg', :alternate => "Slide 1", :class => "image" %>
		  </div>
      <div class="carousel-caption align-middle">
				<div class="bottom-caption">
				  <div class="brand-text-lt background-header">
				  	<h2 id="slide-title"><strong class="default-text-two">S</strong>top <strong class="default-text-two">L</strong>etting <strong class="default-text-two">I</strong>nnocence <strong class="default-text-two">M</strong>is<strong class="default-text-two">S</strong> (out)!</h2>
				  </div>
				</div>
				<div class="tagline">
			  	<h3>Created to help children, when they lose a parent due to a traumatic illness or sudden death.</h3>
				</div>			
			  <div class="row ">
			  	<%= image_tag 'logo.png', :align => "left", :class => "logo"%>
				</div>
				
				<div class="bottom-btn">
			  	<p><%= button_to "Learn More", about_path, method: :get, align: 'center', class: 'btn btn-primary btn-lg' %></p>
			  </div>
			</div>
    </div>


    <div class="item">
      <div class="background">
		  	<%= image_tag 'baseball_camp_team.jpg', :alternate => "Slide 2", :class => "image" %>
		  </div>
      <div class="carousel-caption align-middle">
  			<div class="bottom-caption-two">
				  <div class="brand-text-lt background-header">
				  	<h2 id="slide-title">Slims Chance <br> Baseball Camp</h2>
				  </div>
				</div>
				<div class="tagline-two">
			  	<h3>Registration Starting Soon!</h3>
				</div>

				<br>
				  
				<div class="bottom-btn-two">
			  	<p><%= button_to "Learn More", events_path, method: :get, align: 'center', class: 'btn btn-primary btn-lg' %></p>
			  </div>
			</div>
    </div>


