

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :event_name %><br>
      <%= f.text_field :event_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :event_desc %><br>
      <%= f.text_field :event_desc, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group text-left">
        <%= f.label :start_date %><br>
        <%= f.date_field :start_date, class: 'form-control datepicker' %>
      </div>
    </div>
  

    <div class="form-group text-left">
      <div class="col-md-6">
        <%= f.label :end_date %><br>
        <%= f.date_field :end_date, class: 'form-control datepicker' %>
      </div>
    </div>
  </div>

  <!-- <div class="row">
    <div class="form-group text-left">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :end_date %><br>
      <%= f.date_select :end_date %>
    </div>
  </div> -->

  <div class="row">
    <div class="col-md-6">
      <div class="form-group text-left">
        <strong>Session Start</strong>
        <% f.label :start_time %><br>
        <%= f.time_select :start_time, :default => {:hour => '8', :minute => '00'} %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group text-left">
        <strong>Session End</strong>
        <% f.label :end_time %><br>
        <%= f.time_select :end_time, :default => {:hour => '17', :minute => '00'} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group text-left">
        <%= f.label :cost %><br>
        <%= f.time_select :cost %>
      </div>
    </div> 
  </div>

<%= f.submit "Submit Event", class: 'btn btn-lg btn-danger'%>

<% end %>
