

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :event_name %><br>
      <%= f.text_field :event_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :event_desc %><br>
      <%= f.text_field :event_desc, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :end_date %><br>
      <%= f.date_select :end_date %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :start_time %><br>
      <%= f.time_select :start_time %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :end_time %><br>
      <%= f.time_select :end_time %>
    </div>
  </div>

  <div class="row">
    <div class="form-group text-left">
      <%= f.label :cost %><br>
      <%= f.time_select :cost %>
    </div> 
  </div>

<%= f.submit "Submit Event", class: 'btn btn-lg btn-danger'%>

<% end %>