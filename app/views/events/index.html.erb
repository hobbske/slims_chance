<p id="notice"><%= notice %></p>
  <ol class="breadcrumb text-left">
    <li><%= link_to "Home", root_path %></li>
    <li><a href="#">Events</a></li>
    <li class="active">All Events</li>
  </ol>
<h1>All Events</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="brand-text">
    <tr>
      <th class="text-center">Event</th>
      <th class="text-center">Description</th>
      <th class="text-center">Cost</th>
      <th class="text-center">Begins</th>
      <th class="text-center">Ends</th>
      <!-- <th class="text-center">Start</th>
      <th class="text-center">Finish</th> -->
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center row-fluid">
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.event_desc %></td>
        <td><%= event.cost %></td>
        <td><%= event.start_date.to_s(:short) %></td>
        <td><%= event.end_date.to_s(:short) %></td>
        <!-- <td><%= event.start_time.to_s(:short) %></td>
        <td><%= event.end_time.to_s(:short) %></td> -->

        
        <td class="no-background">
          <%= link_to event do %>
            <i class="glyphicon glyphicon-zoom-in no-background"></i>
          <% end %>
        </td>

        
        <td>
          <%= link_to edit_event_path(event) do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
        </td>

        <td>
          <%= link_to edit_event_path(event), method: :delete do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

